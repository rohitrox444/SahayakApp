<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/fab_margin"
    android:paddingBottom="@dimen/fab_margin"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:hint="Title"
        android:id="@+id/item_TITLE"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textColorHint="@android:color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp"
        android:hint="Description"
        android:id="@+id/item_DESC"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textColorHint="@android:color/black"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:hint="Address"
        android:id="@+id/item_ADDRESS"
        android:textColor="@android:color/black"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textColorHint="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Date"
        android:id="@+id/item_DATE"
        android:textColor="@android:color/black"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textColorHint="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Click here to see Contact person Detail"
        android:id="@+id/item_contact_person_profile"
        android:textColor="@android:color/black"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textColorHint="@android:color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Location Detected By GPS"
        android:id="@+id/item_GPS_location"
        android:textColor="@android:color/black"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textColorHint="@android:color/black"
        />
</LinearLayout>
</android.support.v7.widget.CardView>