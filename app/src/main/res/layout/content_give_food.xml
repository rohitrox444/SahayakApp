<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GiveFood"
    tools:showIn="@layout/activity_give_food">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:id="@+id/food_SAHANA_LOGO"
        android:text="SAHAANA"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:id="@+id/food_RadioGroup"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_below="@+id/food_SAHANA_LOGO"

        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAW"
            android:id="@+id/food_RAWFOOD"
            android:padding="20dp"
            android:layout_weight="2"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COOKED FOOD"
            android:id="@+id/food_COOKEDFOOD"
            android:padding="20dp"
            android:layout_weight="2"
            android:textSize="10dp"
            android:textColor="@android:color/black"
            />

    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_RadioGroup"
        android:padding="30dp"
        android:hint="if you dont enter adress then default adress considered"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/food_Address"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_Address"
        android:hint="Food Description"
        android:padding="30dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/fab_margin"
        android:id="@+id/food_FOOD_DESC"
        android:layout_marginBottom="@dimen/fab_margin"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_FOOD_DESC"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Submit"
        android:padding="30dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:id="@+id/food_SUBMIT"
        />
</RelativeLayout>
</ScrollView>