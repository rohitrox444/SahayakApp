<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Register_Activity"
    tools:showIn="@layout/activity_register_"
    android:background="@android:color/white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAHAYAk"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:elevation="5dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:textColorLink="#8DE67F"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:hint="Name"
        android:id="@+id/register_name"
        android:autofillHints=""
        android:background="@drawable/edittext_bg"
        />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_below="@+id/register_name"
       android:id="@+id/register_radioGRP"
        >

        <RadioButton
            android:id="@+id/radioButton_volunteer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Volunteer"
            android:padding="20dp"
            />

        <RadioButton
            android:id="@+id/radioButton_Govtofficial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Govt. Official"
            android:padding="20dp"
            />
    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:hint="Phone No."
        android:id="@+id/register_phone"
        android:layout_below="@+id/register_radioGRP"
        android:autofillHints=""
        android:background="@drawable/edittext_bg"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:hint="Address"
        android:id="@+id/register_ADDRESS"
        android:layout_below="@+id/register_phone"
        android:autofillHints=""
        android:elevation="5dp"
        android:background="@drawable/edittext_bg"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:hint="NEAR BY LANDMARK"
        android:id="@+id/register_ADDRESS_LANDMARK"
        android:layout_below="@+id/register_ADDRESS"
        android:autofillHints=""
        android:background="@drawable/edittext_bg"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:hint="PASSWORD"
        android:id="@+id/register_PASSWORD"
        android:layout_below="@+id/register_ADDRESS_LANDMARK"
        android:autofillHints=""
        android:background="@drawable/edittext_bg"
        android:layout_marginBottom="@dimen/fab_margin"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/register_PASSWORD"
        android:text="REGISTER"
        android:id="@+id/register_submit"
        android:background="@drawable/button"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="40sp"
        />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
</ScrollView>